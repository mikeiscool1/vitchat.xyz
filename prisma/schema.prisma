generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserState {
  Waitlist
  Active
  Suspended
}

model user {
  id               BigInt    @id
  admin            Boolean   @default(false)
  state            UserState @default(Waitlist)
  suspended_until  DateTime?
  suspended_reason String?
  username         String    @unique
  password_hash    Bytes
  salt             Bytes
  token            String    @unique
  avatar           avatar?
  messages         message[]
}

model message {
  id        BigInt @id
  author_id BigInt
  content   String
  author    user   @relation(fields: [author_id], references: [id])
}

model avatar {
  user_id   BigInt @id
  type      String
  data      Bytes
  user      user   @relation(fields: [user_id], references: [id])
}
